    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manageHeader"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="@string/logout"
        android:textSize="16sp"

        android:padding="15dp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon="@drawable/ic_logout"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        />


    <TextView
        android:id="@+id/addTopicHeader"
        android:layout_below="@id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_topic"
        android:padding="5dp"
        android:layout_margin="18dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/color_blue"
        android:gravity="left"
        />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/addTopicHeader"
        android:id="@+id/addTopicLayout"
        >



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileTitle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/add_topic"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxStrokeWidth="3dp"
            android:textColorHint="@color/black"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="20dp"

            android:id="@+id/topicInputLayout"
            android:layout_weight="1"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:textColorHint="@color/black"
                android:maxLines="1"
                android:inputType="text"
                />

        </com.google.android.material.textfield.TextInputLayout>






        <ImageButton
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:src="@drawable/ic_add"
            android:layout_gravity="center|center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="12dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="19dp"
            android:paddingTop="19dp"
            android:layout_weight="0"

            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTopicLayout">


    </RelativeLayout>

</RelativeLayout>